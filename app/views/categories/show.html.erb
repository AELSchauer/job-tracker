<div class = "text-center" style="padding-top: 50px">
  <h1><%= @category.title %> Jobs</h1>
  <div class="row well">
    <% @category.jobs.each do |job| %>
      <% company = job.company %>
      <p><%= link_to "#{job.title} at #{company.name}", company_job_path(company, job)%></p>
    <% end %>
  </div>
  <p><%= link_to "Back to all Categories", categories_path %></p>
</div>
