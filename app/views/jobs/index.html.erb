All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul>
    <li class=job_<%= job.id %>><p><%= link_to "#{job.title} at #{job.company.name}", company_job_path(@company, job) %></p>
    <p><%= link_to "Edit", edit_company_job_path(@company, job) %> <%= link_to "Delete", company_job_path(@company, job), method: :delete %></p></li>
  </ul>
<% end %>

<p><%= link_to "New job at #{@company.name}", new_company_job_path %>

  <p>Add a contact for <%= @company.name %>:

  <%= form_for @contact do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %></p>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %></p>

    <%= f.label :position %>
    <%= f.text_field :position %></p>

    <%= f.label :email %>
    <%= f.text_field :email %></p>
    <%= hidden_field(:company, :id) %>

    <%= f.submit %>
  <% end %>

  <p>Contacts</p>

  <% @company.contacts.each do |contact| %>
    <p><%= contact.first_name %> <%= contact.last_name %>,
    <%= contact.position %>,
    <%= contact.email %></p>
  <% end %>
