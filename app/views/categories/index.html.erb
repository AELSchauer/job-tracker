<h1>All Categories</h1>
<% @categories.each do |category| %>
  <div class=category_<%= category.id %>><p><%= link_to category.title, category_path(category) %></p>
    <p><%= link_to "Edit", edit_category_path(category) %> <%= link_to "Delete", category_path(category), method: :delete %>
  </div>
<% end %>

<p><%= link_to "New Category", new_category_path %></p>
