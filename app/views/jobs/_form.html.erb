<%= form_for [@company, @job] do |f| %>
  <ul>
    <% @job.errors.full_messages.each do |error| %>
      <li class='error-message'><%= error %></li>
    <% end %>
  </ul>
  <%= hidden_field(:company_id, value: "#{@company.id}") %>
  <table>
    <tr>
      <td>
        <%= f.label :title %>
      </td>
      <td>
        <%= f.text_field :title %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :description %>
      </td>
      <td>
        <%= f.text_area :description %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :level_of_interest %>
      </td>
      <td>
        <%= f.number_field :level_of_interest %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :city %>
      </td>
      <td>
        <%= f.text_field :city %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :category %>
      </td>
      <td>
        <%= f.select :category_id, @categories, include_blank: '' %>
      </td>
    </tr>
  </table>
  <br>
  <%= f.submit "Submit", class: 'btn btn-submit' %>
<% end %>
