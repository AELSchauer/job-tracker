Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

Category: <%= link_to @job.category.title, category_path(@job.category) if @job.category %>

<p>Add a comment:

<%= form_for @comment do |f| %>
  <!-- <%= f.label :comment %> -->
  <%= f.text_area :content %></p>
  <%= hidden_field(:job, :id) %>

  <%= f.submit %>
<% end %>

<p>Comments:</p>
<% @job.comments.order_comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>
