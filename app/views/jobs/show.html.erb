<div class = "text-center">
  <div class="row well">
<h3><%= @job.title %></h3>

<strong>Description:</strong> <%= @job.description %>
<br>

<strong>Level of Interest:</strong> <%= @job.level_of_interest %>
<br>

<strong>Company:</strong> <%= link_to @job.company.name, company_path(@job.company) %>
<br>

<strong>Category:</strong> <%= link_to @job.category.title, category_path(@job.category) if @job.category %>
</div>

<div class="col-md-6"><h4>Add a comment:</h4>

<%= form_for @comment do |f| %>
  <!-- <%= f.label :comment %> -->
  <%= f.text_area :content %></p>
  <%= hidden_field(:job, :id) %>

  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
   Create Comment
  <% end %>
<% end %></div>

<div class="col-md-6" style="padding-bottom: 50px" ><h4>Comments:</h4>
<% @job.comments.order_comments.each do |comment| %>
  <div class="row well"><h4><small><%= comment.created_at %></small><p><p><%= comment.content %></h4></div>
<% end %></div>
</div>
